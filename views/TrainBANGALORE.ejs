<section id="train table">
<div class="container">
    <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Train Number</th>
            <th scope="col">Train Name</th>
            <th scope="col">Days fo travel</th>
            <th scope="col">Hours</th>
            <th scope="col">Points</th>
            <th scope="col">UpVote Train</th>
          </tr>
        </thead>
        <tbody>
        <% allTrainstoBan.forEach(function(allTrainstoBan){ %>
          <tr>
            <th scope="row"><%= allTrainstoBan.Num%></th>
            <td><%= allTrainstoBan.NameofTrain%></td>
            <td><%= allTrainstoBan.Dates_of_running%></td>
            <td><%= allTrainstoBan.hr%></td>
            <td><%= allTrainstoBan.points%></td>
            <td>
              <form action="/preferedtrainstoBANGALORE" method="post">
                <input type="submit" name="NumeofTrain" id="upvotes-btn" placeholder="UPvote" value="<%= allTrainstoBan.Num%>"/>
            </form>
          </td>
          </tr>
        <% }); %>
        </tbody>
      </table>
    </div>
</section>

