<%- include('partials/header'); -%>
 <!-- ***********Navbar Starts*************** -->
 <% var test = 0; %>
  <section id="jumbo-page2">
      <div style="text-align: right; padding-right: 20px">
          <a href="/logout"><button type="submit" id="jb-btn" class="btn btn-primary">Logout</button></a>
      </div>
    <div class="jumbotron jumbotron-fluid" id="jb-m">
      <div class="container">
          <div class="row">
              <div class="col-md-8 col-sm-8">
                  <h1 class="display-4">Find Below the Available Cabs</h1>
            </div>
                  <div class="col-md-4 col-sm-4">
                    <h1>Add a new cab to the database</h1>
                      <form action="/cabtochennai" method="POST">
                          <div class="form-row">
                            <div class="form-group col-md-6">
                              <label>Name</label>
                              <input type="name" class="form-control" value="<%= user.name %>"  name="Username" required>
                              <!-- placeholder="ex- KD. Singh" -->
                            </div>
                            <div class="form-group col-md-6">
                              <label>Cab Price</label>
                              <input type="number" class="form-control" placeholder="ex-3000" name="cabprice" required>
                            </div>
                          </div>
      
                          <div class="form-row">
                            <div class="form-group col-md-6">
                              <label>WhatsApp number</label>
                              <input type="number" placeholder="ex-9090725488" value="<%= user.WPnum %>" class="form-control" name="WPnumber">
                            </div>
                            <div class="form-group col-md-6">
                                    <label>Price per person</label>
                                    <input type="number" placeholder="ex-900" class="form-control" name="ppp">
                                  </div>
                            </div>
                          <div class="form-row">
                            <div class="form-group col-md-6">
                              <label for="inputZip">Number of seats</label>
                              <input type="numbers" class="form-control" placeholder="6" step="1" min="3" max="12" name="numberOfSeats" required>
                            </div>
                            <div class="form-group col-md-6">
                              <label>Free Seats</label>
                              <input type="text" class="form-control" placeholder="3" step="1" min="3" max="12" name="freeSeats" required>
                            </div> 
                          </div>
                          <div class="form-row">
                                <div class="form-group col-md-6">
                                  <label for="inputZip">Date Of travel</label>
                                  <input type="date" class="form-control"  name="dateOfTravel" required>
                                </div>
                          </div>
                          
                          <div class="form-row">
                              <div class="form-group col-md-12 text-center">
                                  <button type="submit" id="jb-btn" class="btn btn-primary">Add your details</button>
                              </div>
                            </div>
                        </form>
                  </div>
                  <!-- <h4 style="letter-spacing: 0.1em;">Find your friends below <samp style="margin-left: 40px; font-size: 100px"><i class="far fa-hand-point-down"></i></samp> </h4> -->
              </div>
        </div>
      </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path fill="#fff" fill-opacity="1" d="M0,128L80,112C160,96,320,64,480,85.3C640,107,800,181,960,192C1120,203,1280,149,1360,122.7L1440,96L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
    </svg>
  </section>



<!-- **************************CAB CARD************************** -->

<div class="container">
  <div class="row">
      <% allcabtoCHENNAI.forEach(function(allcabtoCHENNAI){ %>
        <% test++ %>
      <div class="col-md-4 col-sm-12">
        <!--cards of all vitian -->
        <div class="card" style="width: 20rem;">
              <div class="card-body">
                <h5 class="card-title"><%= allcabtoCHENNAI.Name%></h5>
                <h5><span><i class="fab fa-whatsapp"></i></span><%= allcabtoCHENNAI.WhatsApp%></h5>
                <h5><%= allcabtoCHENNAI.Cab_Price%></h5>
                    <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">Price Per person</th>                           
                          <th scope="col">Total Seats</th>   
                          <th scope="col">Free Seats</th>   
                          <th scope="col">Date</th>                           
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= allcabtoCHENNAI.ppp%></td>
                          <td><%= allcabtoCHENNAI.Number_of_seats%></td>
                          <td><%= allcabtoCHENNAI.Free_Seats%></td>
                          <td><%= allcabtoCHENNAI.Date_Of_travel%></td>
                        </tr>
                      </tbody>
                    </table>
              </div>
        </div>
      </div>
      <% }); %>
  </div>
  <% if(test == 0) { %>
    <h4 style="text-align: center;color: red">As of now we don't have any cab entries</h4>
    <h5 style="text-align: center;color: green">Have fun using TRAVEL BUDDY</h5>
  <% } %>
</div>
